.order_list{
  width: 96%;
  height: 274rpx;
  padding-left: 4%;
  background: #fff;
  font-size: 28rpx;
  margin-bottom: 24rpx;
  position: relative;
  padding-bottom: 24rpx;
}
.order_list_title{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  border-bottom: 1rpx solid #e2e4e8;
  clear: both;
}
.order_list_title text{
  display: inline-block;
}
.order_list_title text:first-of-type{
  color: #ff8b00;
}
.order_list_title text:first-of-type.active{
  color: #3a70fa;
}
.order_list_title text:last-of-type{
  font-size: 22rpx;
  color: #bdc7d2;
  float: right;
  margin-right: 30rpx;
}
.order_list_user{
  width: 100%;
  margin-top: 24rpx;
}
.order_list_user text{
  display: inline-block;
  margin-right: 20rpx;
  color: #333;
}
.order_list_reserve_time,.order_list_reserve_num{
  width: 100%;
  margin-top: 24rpx;
}
.order_list_reserve_time text,.order_list_reserve_num text{
  display: inline-block;
  margin-right: 20rpx;
}

.order_list_status{
  display: block;
  position: absolute;
  top: 125rpx;
  right: 30rpx;
  width: 136rpx;
  height: 48rpx;
  text-align: center;
  line-height: 48rpx;
  color: #fff;
  font-size: 22rpx;
  border-top-right-radius: 24rpx;
  border-bottom-right-radius: 24rpx;
  border-bottom-left-radius: 24rpx;
}
.order_list_status.will{
  background: linear-gradient(to right,#ff8b00 0,#f6be1a 100%);
  box-shadow: 0rpx 10rpx 12rpx rgba(255, 170, 87, .35);
}
.order_list_status.willdo{
  background: linear-gradient(to right,#799bfe 0,#8c9eff 100%);
  box-shadow: 0rpx 10rpx 18rpx rgba(121,155,254, .35);
}
.order_list_status.doing{
  background: linear-gradient(to right,#2fa1fa 0,#58b6ff 100%);
  box-shadow: 0rpx 10rpx 12rpx rgba(88,182,255, .35);
}
.order_list_status.done{
  background: linear-gradient(to right,#0dcbe4 0,#4dd0e1 100%);
  box-shadow: 0rpx 10rpx 12rpx rgba(13,203,228, .35);
}